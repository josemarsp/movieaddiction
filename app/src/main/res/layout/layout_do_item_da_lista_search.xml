<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_black"
    android:paddingTop="8dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_capa_favoritos_id"
            android:layout_width="77dp"
            android:layout_height="104dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView_titulo_favoritos_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="90dp"
            android:text="Titulo do Filme"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_capa_favoritos_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_descricao_favoritos_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="44dp"
            android:justificationMode="inter_word"
            android:text="Descricao do Filme"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_capa_favoritos_id"
            app:layout_constraintTop_toBottomOf="@+id/textView_titulo_favoritos_id"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView_rating_img_star_favoritos_id"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_rating_nota_favoritos_id"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:text="7.0"
            android:textColor="@color/purple"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/imageView_rating_img_star_favoritos_id"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>