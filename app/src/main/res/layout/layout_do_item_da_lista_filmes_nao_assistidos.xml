<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    >

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_capa_filme_nao_vistos_id"
        android:layout_width="77dp"
        android:layout_height="104dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        android:id="@+id/textView_titulo_filme_nao_assistido_id"
        android:layout_width="284dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Titulo do Filme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_capa_filme_nao_vistos_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_descricao_filme_nao_assistido_id"
        android:layout_width="285dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textMultiLine"
        android:text="Descricao do Filme"
        android:textColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toEndOf="@+id/img_capa_filme_nao_vistos_id"
        app:layout_constraintTop_toBottomOf="@+id/textView_titulo_filme_nao_assistido_id" />

    <ImageView
        android:id="@+id/imageView_rating_img_star_nao_assistido_id"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/rating"
        app:layout_constraintBottom_toBottomOf="@+id/textView_titulo_filme_nao_assistido_id"
        app:layout_constraintEnd_toStartOf="@+id/textView_rating_nota_nao_assistido_id"
        app:layout_constraintTop_toTopOf="@+id/textView_titulo_filme_nao_assistido_id" />

    <TextView
        android:id="@+id/textView_rating_nota_nao_assistido_id"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="7.0"
        android:textColor="@color/purple"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_titulo_filme_nao_assistido_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_titulo_filme_nao_assistido_id"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/purple"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_descricao_filme_nao_assistido_id" />

</androidx.constraintlayout.widget.ConstraintLayout>