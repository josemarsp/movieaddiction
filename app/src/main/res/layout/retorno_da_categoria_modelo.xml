<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">


    <ImageView
        android:background="#fff"
        android:id="@+id/card_de_filmes"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iconeDeAvaliação"
        android:layout_width="23dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:background="#000"
        android:src="@drawable/estrela"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nome_do_filme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="titulo filme"
        android:textColor="@color/colorTitulos"
        app:layout_constraintStart_toEndOf="@+id/card_de_filmes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descricao_filme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="descrição filme"
        android:textColor="@color/colortextos"
        app:layout_constraintStart_toEndOf="@+id/card_de_filmes"
        app:layout_constraintTop_toBottomOf="@+id/nome_do_filme" />

    <TextView
        android:id="@+id/retornoAvaliacao"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="12dp"
        android:text="7.5"
        android:textColor="#fff"
        android:background="#000"
        app:layout_constraintStart_toEndOf="@+id/iconeDeAvaliação"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#bb87fc"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_de_filmes" />

</androidx.constraintlayout.widget.ConstraintLayout>