<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/background_black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imagemFilmeDetalhe"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cartazhobbit" />

        <TextView
            android:id="@+id/tituloFilme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:text="Nome do filme"
            android:textColor="@color/purple"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sobreFilme"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="@string/sobre_filme"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imagemFilmeDetalhe"
            app:layout_constraintTop_toBottomOf="@+id/tituloFilme" />

        <ImageView
            android:id="@+id/iconeRating"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/tituloFilme"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rating" />

        <TextView
            android:id="@+id/notaFilme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="7.1"
            android:textColor="#ffffff"
            android:textSize="19sp"
            app:layout_constraintStart_toEndOf="@+id/iconeRating"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>